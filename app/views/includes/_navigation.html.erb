<% user = User.find_by_id(session[:user_id]) %>

<div class="ui fixed inverted menu">
  <div class="ui container">
    <%= link_to root_path, class: "header item" do %>
      <%= image_tag "white_logo.png", class: "logo" %>
      Wiki
    <%end%>
    <%= link_to "Home", root_path, class: "item" %>
    <%= link_to "Signup", signup_path, class: "item" %>
    <%= link_to "Log in", login_path, class: "item" %>
    <%= link_to "Log out", logout_path, class: "item", method: "delete" %>
    <% if user.present? %>
      <span id="username_display">Welcome! <%= user.username %></span>
    <% end %>
  </div>
</div>
